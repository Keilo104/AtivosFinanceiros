<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.edu.ifsp.domain.controller.CtrlToken">
    <children>
        <ImageView fitHeight="400.0" fitWidth="600.0" layoutX="222.0" layoutY="105.0" pickOnBounds="true"
                   preserveRatio="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                   AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
        <Label alignment="CENTER" layoutX="185.0" layoutY="27.0" prefHeight="17.0" prefWidth="199.0"
               text="Resetar a senha">
            <font>
                <Font size="20.0"/>
            </font>
        </Label>
        <Button layoutX="203.0" layoutY="352.0" mnemonicParsing="false" onAction="#btnContinuar" prefHeight="25.0"
                prefWidth="163.0" text="Continuar"/>
        <TextField fx:id="txtFieldToken" layoutX="110.0" layoutY="109.0" prefHeight="25.0" prefWidth="380.0"
                   promptText="Insira o token aqui"/>
        <Label fx:id="labelSenhaInvalida" disable="true" layoutX="107.0" layoutY="283.0" prefHeight="21.0"
               prefWidth="211.0" text="As senhas não correspondem." textFill="RED">
            <font>
                <Font size="15.0"/>
            </font>
        </Label>
        <Label alignment="BOTTOM_LEFT" layoutX="112.0" layoutY="79.0" prefHeight="30.0" prefWidth="347.0"
               text="Enviamos um token ao seu email. Insira-o abaixo">
            <font>
                <Font size="15.0"/>
            </font>
        </Label>
        <Label alignment="BOTTOM_LEFT" layoutX="111.0" layoutY="179.0" prefHeight="21.0" prefWidth="347.0"
               text="Insira abaixo a nova senha.">
            <font>
                <Font size="15.0"/>
            </font>
        </Label>
        <PasswordField fx:id="txtFieldSenha" layoutX="110.0" layoutY="200.0" prefHeight="25.0" prefWidth="380.0"
                       promptText="Nova Senha"/>
        <PasswordField fx:id="txtFieldConfirmarSenha" layoutX="107.0" layoutY="258.0" prefHeight="25.0"
                       prefWidth="380.0" promptText="Confirmar senha"/>
        <Label alignment="BOTTOM_LEFT" layoutX="111.0" layoutY="237.0" prefHeight="21.0" prefWidth="347.0"
               text="Confirmar senha">
            <font>
                <Font size="15.0"/>
            </font>
        </Label>
        <Label fx:id="labelTokenInvalido" disable="true" layoutX="107.0" layoutY="134.0" prefHeight="21.0"
               prefWidth="211.0" text="Token inválido" textFill="RED">
            <font>
                <Font size="15.0"/>
            </font>
        </Label>
    </children>
</AnchorPane>

        <Label layoutX="44.0" layoutY="588.0" text="Detalhes">
            <font>
                <Font size="20.0"/>
            </font>
        </Label>
        <Label fx:id="grupoNome" layoutX="299.0" layoutY="14.0" text="Nome do Grupo">
            <font>
                <Font size="21.0"/>
            </font>
        </Label>
    </children>


</AnchorPane>
